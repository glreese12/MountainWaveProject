<p>
  <%= image_tag @event.icon.thumbnail(:thumb) %>
</p>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

<p>
  <b>Available in R3:</b>
  <%= @event.available_in_r3 %>
</p>

<p>
  <b>Available in Commercial:</b>
  <%= @event.available_in_commercial %>
</p>

<p>
  <b>Latitude:</b>
  <%= @event.latitude %>
</p>

<p>
  <b>Longitude:</b>
  <%= @event.longitude %>
</p>

<p>
  <b>Event Date:</b>
  <%= @event.event_date %>
</p>

<p>
  <b>Event Start Date:</b>
  <%= @event.active_start_date %>
</p>

<p>
  <b>Event End Date:</b>
  <%= @event.active_end_date %>
</p>


<p>
  <b>News Link:</b>
  <%= @event.news_link %>
</p>

<p>
	<b>Categories</b>
	<ul>
	<% for category in @event.categories%>
	<li><%= category.name %></li>
	<% end %>
	</ul>
<p>
	
